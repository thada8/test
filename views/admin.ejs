   <style>

     .header-menu,
      footer {
        display: flex;
        align-items: center;
        width: 100%;
      }
      
      footer {
        padding: 0 10px;
        background: #ccc;
      }
   </style>
    
   </head>
    <body>
      <%- include('navbar.ejs') %>

        <div class="container">
            <div class="row my-3">
                <div class="col-md-8 mb-4">
                    <form class="form-horizontal" name="myForm" method="POST" action="/login" >
                        <div class="form-group">
                            <label class="control-label col-sm-2">Username</label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control" name="username" required>
                              <div class="col-sm-10 invalid-feedback">โปรดระบุบัญชีผู้ใช้งาน</div>
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Password</label>
                            <div class="col-sm-10">
                              <input type="password" class="form-control" name="password" required >
                              <div class="col-sm-10 invalid-feedback">โปรดระบุรหัสผ่าน</div>
                            </div>
                        </div>
                        <div class="form-group">
                          <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" value="submit" class="btn btn-primary">เข้าสู่ระบบ</button>
                          </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>        
        <footer>
          <%- include('footer.ejs') %>
        </footer>
