<style>

 .header-menu,
  footer {
    display: flex;
    align-items: center;
    width: 100%;
  }
  
  footer {
    padding: 0 10px;
    background: #ccc;
  }
</style>

  </head>
  <body>
  
    <% if(session_status){  %>
      <%- include('navbar-admin.ejs') %>
    <% }else{  %>
      <%- include('navbar.ejs') %>
    <% } %>
   

    <% function formatNumber(num){ %>
    <% return num.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,')   %>
    <% } %>
    
    <div class="container">
      <div class="row">
        <% Object.values(products).forEach(function(item){ %>
          <div class="col-lg-4 col-md-6 col-sm-12 mt-4 mb-4">
              <div class="card h-100">
                  <a href="/product/<%= item._id %>"><img class="card-img-top" src="/images/products/<%= item.image %>" alt="" /></a>
                  <div class="card-body">
                      <h4 class="card-title">
                          <a href="/product/<%= item._id %>"><%= item.name %></a>
                      </h4>
                      <h5>ราคา <%= formatNumber(item.price) %> บาท</h5>
                      <p class="card-text"><%= item.description %></p>
                  </div>
              </div>
          </div>
          <%}) %>

      </div>
  </div>
 
 
  <%- include('footer.ejs') %>
</body>
</html>